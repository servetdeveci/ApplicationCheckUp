@model ApplicationHealth.Domain.Entities.AppDef
<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">Yeni Uygulama Ekleme</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">

    <div class="row">
        <div class="col">App Adı</div>
        <div class="col"><input type="text" class="form-control" value="@Model.Name" id="name" /></div>
    </div>
    <div class="row">
        <div class="col">Url</div>
        <div class="col"><input type="text" class="form-control" value="@Model.Url" id="url" /></div>
    </div>
    <div class="row">
        <div class="col">Interval</div>
        <div class="col"><input type="number" class="form-control" value="@Model.Interval" id="interval" /></div>
    </div>

</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
    <button type="button" class="btn btn-primary" onclick="UpdateApp(@Model.AppDefId)" data-dismiss="modal">Güncelle</button>
</div>