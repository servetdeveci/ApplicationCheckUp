    // kullanıcı adı ve email alanlarını otomatik doldurma için
    $("#RegisterView_Name").keyup(function () {
        var val = $(this).val();
        val = val.toLowerCase().replace(/\ /g, '.');
        val = val.toLowerCase().replace(/\ş/g, 's');
        val = val.toLowerCase().replace(/\ç/g, 'c');
        val = val.toLowerCase().replace(/\ö/g, 'o');
        val = val.toLowerCase().replace(/\ı/g, 'i');
        val = val.toLowerCase().replace(/\ü/g, 'u');
        val = val.toLowerCase().replace(/\ğ/g, 'g');
        $("#RegisterView_UserName").val(val);
        $("#RegisterView_Email").val(val.replace(/\@@/g, '') + "@@atlassayac.com");
    });


